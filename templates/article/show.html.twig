{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mt-5 mb-3" >
            <div class="col-12 col-md-7">
                <h2>{{ article.title }}</h2>
                <div class="mb-3">
                        <img class="card-img-top1" src="{{ article.photo }}" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">{{article.content|striptags|slice(0,1000)}}</p>
                            <p class="card-text">{{article.content|striptags|slice(0,1000)}}</p>
                            <p class="card-text">{{article.content|striptags|slice(0,1000)}}</p>
                        </div>
                </div>
            </div>
            <div class="col-12 col-md-4 offset-md-1">
                <h3>Consulter d'autres articles</h3>
                {% for article in articleListe %}
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{ article.photo }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{article.content|striptags|slice(0,75)}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
{% endblock %}
