{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a href="{{ path('app_article_index') }}" class="btn btn-sm btn-outline-primary">Retour Ã  la liste</a>
                <a href="{{ path('app_article_edit', {'slug': article.slug}) }}" class="btn btn-sm btn-outline-primary">Editer</a>
                {{ include('article/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="row mt-5 mb-3" >
        
            <div class="col-7">
                <h1>{{ article.title}}</h1>
                <img src="{{ article.photo}}" width="250" height="250"/> 
                <br>
                <p class="text-justify" style="text-align:justify">{{article.content}}</p>
            </div>
            <div class="col-4">
                {% for article in articleListe %}
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{ article.photo }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{article.content}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
{% endblock %}
